{
  "branches": [
    "main"
  ],
  "plugins": [
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "MULTI_PLATFORM=true PROJECT_NAME=go-todo-api sh build.sh"
      }
    ],
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogTitle": "Automated Changelog, generated by [semantic-release](https://github.com/semantic-release/semantic-release)"
      }
    ],
    [
      "@semantic-release-plus/docker",
      {
        "name": {
          "repository": "go-todo-api",
          "tag": "latest"
        }
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ]
  ]
}
